                        "value": "application/json"
                    },
                    {
                        "key": "RequestId",
                        "value": "{{idem_request_id}}"
                    }
                ],
                "url": "{{baseUrl}}/orders",
                "body": {
                    "mode": "raw",
                    "raw": "{}"
                }
            },
            "event": [
                {
                    "listen": "prerequest",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "const userId = Number(pm.collectionVariables.get('idem_user_id')) || 1;",
                            "const key = pm.collectionVariables.get('idem_request_id');",
                            "",
                            "const body = {",
                            "  userId: userId,",
                            "  amount: 1000",
                            "};",
                            "",
                            "pm.request.body = pm.request.body || {};",
                            "pm.request.body.mode = 'raw';",
                            "pm.request.body.raw = JSON.stringify(body, null, 2);",
                            "",
                            "pm.request.headers.upsert({ key: 'Content-Type', value: 'application/json' });",
                            "pm.request.headers.upsert({ key: 'RequestId', value: key });"
                        ]
                    }
                },
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('idem retry: 200', function () {",
                            "  pm.expect(pm.response.code).to.eql(200);",
                            "});",
                            "",
                            "let json = {};",
                            "try { json = pm.response.json(); } catch (e) {}",
                            "",
                            "const firstId = Number(pm.collectionVariables.get('idem_order_id_first'));",
                            "const orderId = json.id || json.orderId;",
                            "",
                            "pm.test('idem retry: тот же orderId', function () {",
                            "  pm.expect(orderId).to.eql(firstId);",
                            "});",
                            "",
                            "console.log('idem_order_id_retry ->', orderId);"
                        ]
                    }
                }
            ]
        },
        {
